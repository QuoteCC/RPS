<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.quotecc.rps.GameAct">

    <ImageView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rock"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="157dp"
        android:scaleX="-1"
        android:layout_marginLeft="36dp"
        app:layout_constraintLeft_toLeftOf="parent"


        />

    <ImageView
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rock"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/p1"
        android:layout_marginTop="0dp"

        />

    <Button
        android:id="@+id/rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/result"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/result"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/result"
        app:layout_constraintHorizontal_bias="0.515"
        android:background="@drawable/bttn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.185" />

    <Button
        android:id="@+id/paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/rock"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rock"
        android:background="@drawable/bttn"/>

    <Button
        android:id="@+id/scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/paper"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/paper"
        android:background="@drawable/bttn"/>

    <TextView
        android:id="@+id/p1score"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="8dp"
        android:text="DEFAULT"
        app:layout_constraintBottom_toTopOf="@+id/p1"
        app:layout_constraintRight_toRightOf="@+id/p1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/p2score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="DEFAULT"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/p2"
        app:layout_constraintTop_toTopOf="@+id/p1score" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="DEFAULT"
        android:textSize="25sp"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="@+id/p1"
        app:layout_constraintRight_toRightOf="@+id/p2"
        app:layout_constraintTop_toBottomOf="@+id/p1" />

</android.support.constraint.ConstraintLayout>
